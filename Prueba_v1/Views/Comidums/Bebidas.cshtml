@model IEnumerable<Prueba_v1.Models.dbModels.Comidum>

@{
    ViewData["Title"] = "Bebidas";
}

@{
    Layout = "_LayoutEsp";
}
<html lang="en">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/entradas.css" asp-append-version="true" />
</head>


<body>
<h1>Bebidas</h1>

<p>Deliciosas Bebidas para acompañar con tu comida. :D </p>

<div class="col-lg-12">
    <div class="card-grid">
    <div class="card-container">
            <div class="card">
                <div class="face front">
                    <img src="~/IMG/cocacola.jpg" alt="">
                    <h3>Coca-Cola</h3>
                </div>
                <div class="face back">
                    <p>
                        Una clasica coca-cola para quitarse esa sed que tanto te lleva molestando.
                    </p>
                    <div class="link">
                        <a href="#">Agregar</a>
                    </div>
                </div>
            </div>


        </div>

            <div class="card-container">
                <div class="card">
                    <div class="face front">
                        <img src="~/IMG/limonada.jpg" alt="">
                        <h3>Limonada</h3>
                    </div>
                    <div class="face back">
                        <p>
                            Una refrescante limonada dulce para este calor.
                        </p>
                        <div class="link">
                            <a href="#">Agregar</a>
                        </div>
                    </div>
                </div>


            </div>


            <div class="card-container">
                <div class="card">
                    <div class="face front">
                        <img src="~/IMG/jamaica.jpg" alt="">
                        <h3>Jamaica</h3>
                    </div>
                    <div class="face back">
                        <p>
                            Una bebida de jamaica que te recordara a los viejos tiempos.
                        </p>
                        <div class="link">
                            <a href="#">Agregar</a>
                        </div>
                    </div>
                </div>


            </div>

    </div>
</div>
</body>
</html>


