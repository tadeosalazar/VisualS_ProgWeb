@model IEnumerable<Prueba_v1.Models.dbModels.Comidum>

@{
    ViewData["Title"] = "Inicio";
}

@{
    Layout = "_LayoutEsp";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/entradas.css" asp-append-version="true" />
</head>



<h1>A DEGUSTAR</h1>

<p>Escge de nuestro amplio catalogo de comidas para que no te quedes con hambre</p>

@if (Model != null)
{
    <table>
        <thread>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>

        </thread>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Descripcion</td>
                    <td>@String.Format("{0:C}",item.Precio)</td>
                    <td>@Html.ActionLink("Agregar","AgregarCarrito","Carrito",new {Id=item.IdComida})</td>
                </tr>
            }
        </tbody>

    </table>
}