@model IEnumerable<Prueba_v1.Models.dbModels.Comidum>

@{
    ViewData["Title"] = "Inicio";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/entradas.css" asp-append-version="true" />
</head>
<h1>Inicio</h1>

<div class="col-lg-12">
    <div class="row">
        <div class="card">
            <div class="face front">
                <img src="IMG/burgir.jpg" alt="">
                <h3>Hamburguesa</h3>
            </div>
            <div class="face back">

                <p>
                    Una deliciosa hamburguesa simple, con carne de res, queso manchego, 2 tiras de tocino,
                    tomate, cebolla y lechuga acompañado de una orden de papas francesas.
                </p>
                <div class="link">
                    <a href="#">Más Detalles</a>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="face front">
                <img src="IMG/pizza.jpg" alt="">
                <h3>Pizza De pepperoni</h3>
            </div>
            <div class="face back">

                <p>Unaa simple pizza de 8 rebanadas con salsa de toamte, queso manchego, pepperoni y pimento verde.</p>
                <div class="link">
                    <a href="#">Más Detalles</a>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="face front">
                <img src="IMG/torta_salmon.jpg" alt="">
                <h3>Torta de Salmón</h3>
            </div>
            <div class="face back">
 
                <p>
                    Una torta de filete salmon, con queso manchego, jamon de pavo,
                    una cama de lechuga, rebanadas de cebolla y bañado en aceite oliva.
                </p>
                <div class="link">
                    <a href="#">Más Detalles</a>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="face front">
                <img src="IMG/pescado.jpg" alt="">
                <h3>Pescado Empanizado</h3>
            </div>
            <div class="face back">

                <p>
                    Este platillo consta de 3 tiras de pescado empanizado, sobre una cama
                    de lechuga cebolla, zanahoria, tomate.
                </p>
                <div class="link">
                    <a href="#">Más Detalles</a>
                </div>
            </div>
        </div>

    </div>
</div>


